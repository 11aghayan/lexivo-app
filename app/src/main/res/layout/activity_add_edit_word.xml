<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditWordActivity">

    <LinearLayout
        android:id="@+id/accountBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="@dimen/layoutMargin"
        android:layout_marginTop="@dimen/layoutMargin">
        <include layout="@layout/user_info_box" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="@dimen/layoutMargin"
        app:layout_constraintTop_toBottomOf="@+id/accountBox"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/languageFlag"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:foreground="@drawable/language_flag_german"
            app:cardCornerRadius="12dp"
            app:cardElevation="0.5dp"/>

        <TextView
            android:id="@+id/headerLeftPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/languageFlag"
            android:text="@string/text_header_add_a_word_left_part"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/main_text" />

        <TextView
            android:id="@+id/textLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/headerLeftPart"
            android:text="@string/spinner_dropdown_item_placeholder"
            android:layout_marginStart="6dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/main_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textLanguage"
            android:text="@string/text_word"
            android:layout_marginStart="6dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/main_text" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/layoutMargin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/language"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/spinnerWordType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/spinner"
                android:layout_marginTop="16dp" />

            <include
                android:id="@+id/spinnerWordGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/spinner"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/layoutMargin"
        android:layout_marginBottom="@dimen/layoutMargin"
        android:backgroundTint="@color/primary"
        android:contentDescription="@string/content_description_btn_save_add_edit_word"
        android:elevation="0.3dp"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.1"
        android:text="@string/text_btn_save_add_edit_word"
        android:textAllCaps="false"
        android:textColor="@color/background"
        android:textSize="16sp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="VisualLintButtonSize,TextContrastCheck"
        tools:layout_editor_absoluteX="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>